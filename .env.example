###############################################################################
# CONFIGURAÇÕES DO BOT DO TELEGRAM
###############################################################################

# Token da API do Telegram (OBRIGATÓRIO)
# Obtenha com o BotFather: https://t.me/botfather
TELEGRAM_API_TOKEN=seu_token_aqui

# ID do proprietário do bot (OBRIGATÓRIO)
# Este é o seu ID de usuário do Telegram
# Você pode obtê-lo enviando uma mensagem para @userinfobot
OWNER_ID=123456789

# Nome de usuário do bot (opcional, padrão: Nations_bro_bot)
# Não inclua o símbolo @ no início
BOT_USERNAME=Nations_bro_bot

###############################################################################
# CONFIGURAÇÕES DE INTEGRAÇÃO COM API EXTERNA
###############################################################################

# Chave da API da Anthropic (OBRIGATÓRIO para funcionalidades de IA)
# Obtenha em: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-sua_chave_aqui

###############################################################################
# CONFIGURAÇÕES DE BANCO DE DADOS
###############################################################################

# String de conexão com o MongoDB (OBRIGATÓRIO)
# Para MongoDB Atlas (produção recomendada):
MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/gym_nation_bot?retryWrites=true&w=majority

# Para MongoDB local (desenvolvimento):
# MONGODB_CONNECTION_STRING=mongodb://admin:password@localhost:27017

# Para migração de dados (usado apenas pelo script de migração)
# MongoDB local (origem da migração):
MONGODB_LOCAL_CONNECTION_STRING=mongodb://admin:password@localhost:27017
# MongoDB Atlas (destino da migração):
MONGODB_ATLAS_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/gym_nation_bot?retryWrites=true&w=majority

###############################################################################
# CONFIGURAÇÕES DE COMPORTAMENTO DO BOT
###############################################################################

# Limite diário de perguntas e respostas (QA) por usuário
QA_DAILY_LIMIT=2

# Mensagem de boas-vindas personalizada (opcional)
# Descomente e modifique para usar uma mensagem personalizada
# WELCOME_MESSAGE=Olá! Sou o Nations Bro Bot. Como posso ajudar você hoje?

###############################################################################
# CONFIGURAÇÕES DE SISTEMA
###############################################################################

# Nível de log (opcional, padrão: INFO)
# Opções: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO 